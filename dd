version: '3.8'

services:
  postgresdb:
    image: postgres
    restart: always
    environment:
      POSTGRES_DB: matchadb
      POSTGRES_USER: stronk
      POSTGRES_PASSWORD: pass
    ports:
      - 5433:5432
    networks:
      - matcha_network
    volumes:
      - matcha_volumes:/var/lib/postgresql/data

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: matcha_backend
    ports:
      - 8000:8000
    restart: always
    depends_on:
      - postgresdb
    networks:
      - matcha_network
    volumes:
      - matcha_volumes:/app/uploads

